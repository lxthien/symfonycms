<div class="comment-form mt-3">
    <div id="respond" class="comment-respond">
        <h3 id="reply-title" class="comment-reply-title">{{ 'comment.leave_your_comment_below'|trans }}</h3>
        <p class="comment-response" id="comment-response"></p>
        {{ form_start(form, {'attr': {'id': 'form-comment'}}) }}
            {{ form_errors(form) }}
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        {{ form_label(form.content) }}
                        {{ form_errors(form.content) }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6 col-md-6 col-lg-6">
                    <div class="form-group">
                        {{ form_label(form.phone) }}
                        {{ form_errors(form.phone) }}
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-6 col-md-6 col-lg-6">
                    <div class="form-group">
                        {{ form_label(form.email) }}
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6 col-md-6 col-lg-6">
                    <div class="form-group">
                        {{ form_label(form.author) }}
                        {{ form_errors(form.author) }}
                        {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_widget(form.send, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        {{ form_end(form) }}
    </div>
</div>