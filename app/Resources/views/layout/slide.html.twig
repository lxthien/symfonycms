            <div class="item active">
                <picture>
                    <source
                        srcset="{{ asset('assets/images/banner/minhduy-banner-1.jpg') | imagine_filter('banner_768_400') }}"
                        media="(max-width: 799px)" />
                    <source
                        srcset="{{ asset('assets/images/banner/minhduy-banner-1.jpg') | imagine_filter('banner_1360_550') }}"
                        media="(min-width: 800px)" />
