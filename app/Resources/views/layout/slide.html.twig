                        src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                        data-src="{{ asset('assets/images/banner/minhduy-banner-1.jpg') | imagine_filter('banner_1360_550') }}"
                        alt="Công ty xây dựng uy tín, chuyên nghiệp"
                        class="lazyload" />
                </picture>
                <div class="container">
                    <div class="carousel-caption text-left">
                        <h2>Công ty xây dựng uy tín, chuyên nghiệp</h2>
                    </div>
                </div>
            </div>
