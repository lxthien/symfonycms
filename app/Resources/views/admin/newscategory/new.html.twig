{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_new' %}

{% block body_class 'admin_new new' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">{{ 'title.newscategory_new'|trans }}</strong>
                        </div>
                        <div class="card-body">
                            <div id="pay-invoice">
                                <div class="card-body">
                                    {{ form_start(form) }}
                                        {{ form_row(form.parentcat) }}
                                        {{ form_row(form.name) }}
                                        {{ form_row(form.url) }}
                                        {{ form_row(form.description) }}
                                        {{ form_row(form.enable) }}
                                        {{ form_row(form.sortBy) }}

                                        <div class="card-title">
                                            <h3>{{ 'label.seo'|trans }}</h3>
                                        </div>
                                        <hr>
                                        {{ form_row(form.pageTitle) }}
                                        {{ form_row(form.pageDescription) }}
                                        {{ form_row(form.pageKeyword) }}

                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_newscategory'|trans }}
                                        </button>

                                        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
                                        
                                        <a href="{{ path('admin_newscategory_index') }}" class="btn btn-link">
                                            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
                                        </a>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- .card -->
                </div>
                <!--/.col-->
            </div>
        </div>
        <!-- .animated -->
    </div>
    <!-- .content -->
{% endblock %}
